{
  "name": "@planflow/mcp",
  "version": "0.1.0",
  "description": "PlanFlow MCP Server for Claude Code - AI-native project management from your terminal",
  "author": "PlanFlow <hello@planflow.dev>",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "planflow-mcp": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
    "claude-code",
    "anthropic",
    "ai",
    "project-management",
    "task-management",
    "developer-tools",
    "cli",
    "planflow"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/planflow/planflow.git",
    "directory": "packages/mcp"
  },
  "bugs": {
    "url": "https://github.com/planflow/planflow/issues"
  },
  "homepage": "https://planflow.dev",
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts --format esm --dts --clean",
    "start": "node dist/index.js",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "pnpm run build && pnpm run test"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@planflow/shared": "workspace:*",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^2.0.0",
    "eslint": "^9.0.0",
    "tsup": "^8.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.54.0",
    "vitest": "^2.0.0"
  }
}
